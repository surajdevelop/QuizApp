<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#9C27B0"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:background="#7B1FA2"
            android:text="Hey! here are some questions based on the course you have covered so far
        complete it and sharpen your skills"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:inputType="textCapWords"
            android:id="@+id/name_edit_text"
            android:hint="WRITE YOUR NAME HERE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_margin="14dp"
            android:background="#CDDC39"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_one_text"
                android:fontFamily="sans-serif-light"
                android:text="Q1. The attribute use to create space within views is margin." />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/one_one_text"
                    android:padding="4dp"
                    android:text="true"
                    android:onClick="Ques1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:padding="4dp"
                    android:id="@+id/one_two_text"
                    android:onClick="Ques1"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_height="wrap_content"
            android:padding="14dp"

            android:background="#CDDC39"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_two_text"
                android:fontFamily="sans-serif-light"
                android:text="Q2. check if this statement is true or false
                String word = 1; " />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:padding="4dp"
                    android:id="@+id/two_one_text"
                    android:onClick="Ques2"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:padding="4dp"
                    android:onClick="Ques2"
                    android:id="@+id/two_two_text"/>
            </RadioGroup>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#CDDC39"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_three_text"
                android:fontFamily="sans-serif-light"
                android:text="Q3. If a method is declared like this
      'public int lengthOfWord(String word)'
    then return type of this method is String" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="true"
                    android:padding="4dp"
                    android:onClick="Ques3"
                    android:id="@+id/three_one_text"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:padding="4dp"
                    android:onClick="Ques3"
                    android:id="@+id/three_two_text"/>
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_margin="14dp"
            android:background="#CDDC39"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Q4. The way to link the click to new activity,like on click,camera pops up.the way is called" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="type your answer here"
                android:id="@+id/ques_four_text"
                android:inputType="textCapWords"
                 />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK"
                android:onClick="Check4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_margin="14dp"
            android:background="#CDDC39"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Q5. If we want to type first letter capital in edit text,the attribute value of intputType is" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_five_text"
                android:hint="type your answer here"

                 />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK"
                android:onClick="Check5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_margin="14dp"
            android:background="#CDDC39"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_six_text"
                android:fontFamily="sans-serif-light"
                android:text="Q6. Viewgroups we have studied so far are " />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first6_option_checkbox"
                android:text="TextView" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second6_option_checkbox"
                android:text="RelativeLayout" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/third6_option_checkbox"
                android:text="LinearLayout" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fourth6_option_checkbox"
                android:text="EditText" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK"
                android:onClick="Check6"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:fontFamily="sans-serif-light"
            android:background="#FFFFFF"
            android:layout_margin="14dp"
            android:text="And now an interesting question"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="#CDDC39"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ques_seven_text"
                android:text="Q7. Names of our instructors are" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first7_option_checkbox"
                android:text="Katherine Kuan" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second7_option_checkbox"
                android:text="Kunal Chawla" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/third7_option_checkbox"
                android:text="Lyla Fujiwara" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fouth7_option_checkbox"
                android:text="Kim Dryden" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK"
                android:onClick="Check7"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:onClick="OnSumbit"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:text="SUBMIT" />


    </LinearLayout>
</ScrollView>